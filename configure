#!/bin/bash

echo "Life configuring ..."

PREREQUESTIES = "g++ libsdl2-dev libgl1-mesa-dev "
for prerequest in $PREREQUESTIES
do
    if [ "$(dpkg -l | grep -E '^ii' | grep $prerequest)" == "" ]
    then
        sudo apt -y -qq install $prerequest
    else
        echo $prerequest is present.
    fi
done

echo "Life configured."
