#!/bin/bash

echo "Life configuring ..."

packages=\
"
    zip
    unzip
    g++
    mingw-w64
    libsdl2-dev
    libglew-dev
"
libs=\
"
    https://www.libsdl.org/release/SDL2-devel-2.0.10-mingw.tar.gz
    SDL2-2.0.10/x86_64-w64-mingw32
    x86_64-w64-mingw32

    http://www.grhmedia.com/glew/glew-2.1.0-mingw-w64.zip
    glew-2.1.0
    x86_64-w64-mingw32
"
cd prerequisite/
if ! ./configure.sh "${packages}" "${libs}"
then
    echo "Life configuration failed."
    exit -1
fi
cd ../

echo "Life configured."
